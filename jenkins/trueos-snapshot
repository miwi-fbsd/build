/*

Our default Jenkins pipeline we use to create our on-commit
snapshot builds of trueos-master branch.

*/

pipeline {
  agent { label 'TrueOS-Build-Snapshot' }

  environment {
    GH_ORG = 'trueos'
    GH_REPO = 'trueos'
    POUDRIERE_BASE = 'trueos-snap-base'
    POUDRIERE_PORTS = 'trueos-snap-ports'
    TRUEOS_VERSION = '13.0'
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Build') {
      post {
        always {
          archiveArtifacts artifacts: 'release/port-logs/latest/**', fingerprint: true
          archiveArtifacts artifacts: 'release/src-logs/**', fingerprint: true
        }
      }
      steps {
        sh 'make ports'
      }
    }
    stage('ISO') {
      post {
        always {
          archiveArtifacts artifacts: 'release/iso-logs/**', fingerprint: true
        }
      }
      steps {
        sh 'make iso'
      }
    }
     stage('Publish') {
      steps {
          sh 'mkdir -p /home/packages/trueos/pkg/FreeBSD:13:amd64/latest || true'
          sh 'cd release/packages && rsync -av --delete-after --delay-updates . /home/packages/trueos/pkg/FreeBSD:13:amd64/latest'
          sh 'mkdir -p /home/packages/trueos/iso || true'
          sh 'rsync -av --delete-after --delay-updates release/iso/ /home/packages/trueos/iso'
        }
}
  }
  post {
    success {
      script {
        cleanWs notFailBuild: true
      }
    }
  }
}
