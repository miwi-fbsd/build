/*

Our default Jenkins pipeline we use to create our on-commit
snapshot builds of trueos-master branch.

*/

pipeline {
  agent { label 'TrueOS-Build-Snapshot' }

  environment {
    GH_ORG = 'trueos'
    GH_REPO = 'trueos'
    POUDRIERE_BASE = 'trueos-snap-ec2-base'
    POUDRIERE_PORTS = 'trueos-snap-ec2-ports'
    TRUEOS_VERSION = '13.0'
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Build') {
      post {
        always {
          archiveArtifacts artifacts: 'release/port-logs/latest/**', fingerprint: true
          archiveArtifacts artifacts: 'release/src-logs/**', fingerprint: true
        }
      }
      environment {
         SIGNING_KEY = credentials('a50f9ddd-1460-4951-a304-ddbf6f2f7990')
	 TRUEOS_MANIFEST="${env.WORKSPACE}/manifests/trueos-snapshot-ec2-builder.json"
      }
      steps {
        sh 'make ports'
      }
    }
    stage('ISO') {
      post {
        always {
          archiveArtifacts artifacts: 'release/iso-logs/**', fingerprint: true
        }
      }
      environment {
         SIGNING_KEY = credentials('a50f9ddd-1460-4951-a304-ddbf6f2f7990')
	 TRUEOS_MANIFEST="${env.WORKSPACE}/manifests/trueos-snapshot-ec2-builder.json"
      }
      steps {
        sh 'make iso'
      }
    }
    stage('Publish') {
      steps {
        sshagent (credentials: ['syncbot-credentials']) {
          sh 'ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null syncbot@pkg.trueos.org mkdir -p /data/pkg/snapshot-ec2/FreeBSD:13:amd64/latest || true'
          sh 'cd release/packages && rsync -av --delete-after --delay-updates -e "ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null" . syncbot@pkg.trueos.org:/data/pkg/snapshot-ec2/FreeBSD:13:amd64/latest/'
          sh 'ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null syncbot@pkg.trueos.org mkdir -p /data/iso/snapshot-ec2/ || true'
          sh 'rsync -av --delete-after --delay-updates -e "ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null" release/iso/ syncbot@pkg.trueos.org:/data/iso/snapshot-ec2/'
        }
      }
    }
  }
  post {
    success {
      script {
        cleanWs notFailBuild: true
      }
    }
  }
}
